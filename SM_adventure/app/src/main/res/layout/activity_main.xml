<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context="com.example.dayto.sm_adventure.MainActivity">



    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Nick Name"
        android:id="@+id/editText_main_Nickname"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/editText_main_ID"
        android:layout_alignLeft="@+id/editText_main_ID"
        android:layout_alignStart="@+id/editText_main_ID" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_main_ID"
        android:hint="ID"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/editText_main_Password"
        android:layout_alignLeft="@+id/editText_main_Password"
        android:layout_alignStart="@+id/editText_main_Password" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:password="true"
        android:id="@+id/editText_main_Password"
        android:layout_above="@+id/button_main_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/button_main_login"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_above="@+id/textView_main_result"
        android:layout_alignRight="@+id/editText_main_Password"
        android:layout_alignEnd="@+id/editText_main_Password" />

    <Button
        android:id="@+id/button_main_insert"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:layout_below="@+id/editText_main_Password"
        android:layout_alignLeft="@+id/editText_main_Password"
        android:layout_alignStart="@+id/editText_main_Password" />

    <TextView
        android:id="@+id/textView_main_result"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_main_insert"
        android:layout_alignStart="@+id/button_main_insert" />


</RelativeLayout>